
<div class="signup_container">
  <h2 style="text-align: center">Sign up</h2><hr>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


    <div class="form-group">
      <%= f.input :first_name, autofocus: true, autocomplete: "first_name" %>
    </div>

    <div class="form-group">
      <%= f.input :middle_name, autofocus: true, autocomplete: "middle_name" %>
    </div>

    <div class="form-group">
      <%= f.input :last_name, autofocus: true, autocomplete: "last_name" %>
    </div>

    <div class="form-group">
      <%= f.input :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-group">
      <%= f.input :mobile_number, autofocus: true, autocomplete: "mobile_number" %>
    </div>

    <div class="form-group">
      <%= f.label :gender %><br />
      <%= f.collection_radio_buttons :gender, [[0, 'Male'], [1, 'Female']], :first, :last %>
    </div>

    <div class="form-group">
      <%= f.label :Birth_Date %><br/>
      <%= f.input_field :birth_date,start_year: Time.now.year - 100,end_year: Time.now.year - 18,order: %i(day month year) %>
      <br>
    </div>
    
    <div class="form-group">
      <%= f.input :password, autocomplete: "new-password" , required: true %>
    </div>

    <div class="form-group">
      <%= f.input :password_confirmation, autocomplete: "new-password" , required: true %>
    </div>

    <div class="form-actions">
      <%= f.submit "Sign up", class: "btn btn-primary btn-block btn-md" %>
    </div>

  <% end %>

  <div class="text-center">
    Already have account? 
    <%= render "devise/shared/links" %>
  </div>
</div>
