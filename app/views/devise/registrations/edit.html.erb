<h1></h1>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<div class="container bootstrap snippets">
  <div class="row">
    <div class="col-xs-12 col-sm-9">
       <div class="panel panel-default">
          <div class="panel-body text-center">
             <% if user_signed_in? %>
                <% if current_user.profile_image.attached? %>
                  <%= image_tag(current_user.profile_image,:class=>"img-circle profile-avatar")%>
      
                <% else %>
                  <%= image_tag("https://p7.hiclipart.com/preview/749/84/910/chef-cooking-vector-chef-hat.jpg",class: "img-circle profile-avatar") %>
                 <% end %>
            <% else %>
              <% if current_user.profile_image.attached? %>
                  <%= image_tag(current_user.profile_image,class: "img-circle profile-avatar")%>
              <% else %>
                <%= image_tag("https://p7.hiclipart.com/preview/749/84/910/chef-cooking-vector-chef-hat.jpg",class: "img-circle profile-avatar") %>
              <% end %>
            <% end %>
               <h3 style="margin-left:65px ">Edit profile Image<br></h3>
      <div class="form-group", style="margin-left: 160px;">
       
       <%= f.file_field :profile_image %>
      </div>
 
          </div>

          <div class="panel panel-default">
            <div class="panel-heading">
              <h4 class="panel-title">User info</h4>
            </div>

            <div class="panel-body">
                <div class="form-group">
                  <div class="col-sm-10">
                       <%= f.input :first_name, autofocus: true, autocomplete: "first_name",required: false %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-10">
                       <%= f.input :middle_name, autofocus: true, autocomplete: "middle_name",required: false %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-10">
                       <%= f.input :last_name, autofocus: true, autocomplete: "last_name",required: false %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-10">
                     <%= f.label :gender %><br />
                     <%= f.collection_radio_buttons :gender, [[0, 'Male'], [1, 'Female']], :first, :last %>
                  </div>
                </div>
                 <div class="form-group">
                  <div class="col-sm-10">
                    <%= f.label :Birth_Date %><br/>
                    <%= f.input_field :birth_date,start_year: Time.now.year - 100,end_year: Time.now.year - 18,order: %i(day month year) %>
                  </div>
                </div>
                



              </div>
            </div>
          <div class="panel panel-default">
            <div class="panel-heading">
              <h4 class="panel-title">Contact Info</h4>
            </div>
            <div class="panel-body">
              <div class="form-group">
                <div class="col-sm-10">
                  <%= f.input :email, autofocus: true, autocomplete: "email" ,required: true %>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-10">
                  <%= f.input :mobile_number, autofocus: true, autocomplete: "mobile_number" %>
                </div>
              </div>
            </div>
          </div>

          <div class="panel panel-default">
            <div class="panel-heading">
              <h4 class="panel-title">Security</h4>
            </div>
            <div class="panel-body">
              <div class="form-group">
                <div class="col-sm-10">
                  <%= f.label :current_password  %><br>
                  <%= f.password_field :current_password, autocomplete: "new-password" %>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-10">
                  <%= f.label :new_password %><i> (  leave blank if you don't want to change it)</i><br>
                  <%= f.password_field :password, autocomplete: "new-password" %>
                </div>
              </div>
              <div class="form-group">
                <div class="col-sm-10">
                   <%= f.label :confirm_passowrd %><br>
                   <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
              <%= f.submit "Update" , class: "btn btn-primary" %>
              <button type="reset" class="btn btn-default">Cancel</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>


