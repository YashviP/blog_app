<!DOCTYPE html>
<html>
  <head>
    <title>BlogApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/easy-autocomplete/1.3.5/jquery.easy-autocomplete.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/easy-autocomplete/1.3.5/easy-autocomplete.themes.min.css">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <nav class="navbar navbar-expand-lg ">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="#" style="color: white"><b>Blogify</b></a>

      
          <% if user_signed_in? %>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">

              <%= form_tag(search_path, method: 'get',class: "form-inline my-2 my-lg-0") do %>
                <%= text_field_tag(:search,params[:search],class: "form-control mr-sm-2" ,id: "search", html: { autocomplete: "off" })%>
                <%= submit_tag("Search", name: nil,class: "btn btn-outline-primary" , :style =>"color:white;") %>
              <% end %>

            </ul>

            <%= link_to "", "", data: {toggle: "modal", target: ".bd-example-modal-lg"},class: "far fa-edit" ,:style=> "font-size: 1.85rem; color: white;margin-right: 40px;"%>
            <%= link_to  edit_user_registration_path do %>
                <span class="fa fa-user-circle" style="font-size: 1.85rem; color: white;margin-right: 40px"> </span>
            <% end %>  
            
            <%= link_to '', destroy_user_session_path, :method=> :delete, class: "fas fa-sign-out-alt",:style=>"font-size: 1.85rem; color: white;margin-right: 40px" %>
          </div>
          <% else %>

              <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
              </ul>
              <%= link_to "Sign up" , new_user_registration_path , :class => "btn btn-outline-primary" , :style =>"color:white;" %>  
              <div style="padding-left: 10px;">
                <%= link_to "Login" , new_user_session_path , :class => "btn btn-outline-primary" , :style=> "color: white" %>
              </div>
          <% end %>
        
    </nav>

    <div class="starter-template">
        <div class="container">
          <%if notice %><div class ="alert alert-info"> <%= notice %></div> 
          <% end %>
          <%if alert %><div class ="alert alert-warning"> <%= alert %></div> 
          <% end %>

          <%= yield %>
        </div>
      </div>
  </body>

  <%= render 'shared/form' %>

</html>



   