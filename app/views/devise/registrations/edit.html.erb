<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <div style="margin-left:60px;"> 
        <% if user_signed_in? %>
          <% if current_user.profile_image.attached? %>
              <%= image_tag(current_user.profile_image,:class=> "image_edit")%>
      
          <% else %>
              <%= image_tag("https://p7.hiclipart.com/preview/749/84/910/chef-cooking-vector-chef-hat.jpg", size: "100x100",style: "float:left;margin:20px;border-radius: 100px;" ) %>
          <% end %>
        <% else %>
          <% if current_user.profile_image.attached? %>
              <%= image_tag(current_user.profile_image,:class=> "image_edit")%>
      
          <% else %>
              <%= image_tag("https://p7.hiclipart.com/preview/749/84/910/chef-cooking-vector-chef-hat.jpg", size: "100x100",style: "float:left;margin:20px;border-radius: 100px;" ) %>
          <% end %>

        <% end %>
      </div>
       <h3 style="margin-left:65px;color:#8e2731; ">Edit profile Image<br></h3>
      <div class="form-group", style="margin-left: 70px;">
       
       <%= f.file_field :profile_image %>
      </div>
   <div class="form-group">
      <%= f.input :first_name, autofocus: true, autocomplete: "first_name" %>
    </div>

    <div class="form-group">
      <%= f.input :middle_name, autofocus: true, autocomplete: "middle_name" %>
    </div>

    <div class="form-group">
      <%= f.input :last_name, autofocus: true, autocomplete: "last_name" %>
    </div>

    <div class="form-group">
      <%= f.input :email, autofocus: true, autocomplete: "email" ,required: true %>
    </div>

    <div class="form-group">
      <%= f.input :mobile_number, autofocus: true, autocomplete: "mobile_number" %>
    </div>

    <div class="form-group">
      <%= f.label :gender %><br />
      <%= f.collection_radio_buttons :gender, [[0, 'Male'], [1, 'Female']], :first, :last %>
    </div>

    <div class="form-group">
      <%= f.label :Birth_Date %><br/>
      <%= f.input_field :birth_date,start_year: Time.now.year - 100,end_year: Time.now.year - 18,order: %i(day month year) %>
      <br>
    </div>
    
  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
